      <!-- End Navbar -->
      <div class="content">
        <div class="container-fluid">
          <!-- your content here -->
          <form name="formEditBook" method="POST" action="/table_books/update/{{book._id}}"
            enctype="multipart/form-data">
            <div class="form_edit row">
              <div class="label col-2">
                <label for="name">Name: </label>
                <label for="price">Price: </label>
                <label for="sale">Sale: </label>
                <label for="image">Cover Image: </label>
                <label for="category">Category: </label>
                {{!-- <label for="description">Book Description: </label> --}}
              </div>

              <div class="input col-10">
                {{!-- input Title --}}
                <input type="text" required name="name" value="{{book.name~}}">
                {{!-- input Price --}}
                <input type="number" required name="price" value="{{book.price}}" min="0">
                {{!-- input Sale --}}
                <input type="number" name="sale" value="{{book.sale}}" min="0" max="100">
                {{!-- input Cover Image --}}
                <input name="image" class="form-control" type="file" id="formFileMultiple" multiple>
                {{!-- input Category --}}
                <input list="categories" name="category" value="{{book.category.name}}">
                <datalist id="categories">
                  {{#each categories}}
                  <option value="{{name}}"></option>
                  {{/each}}
                </datalist>
              </div>
              {{!-- input Description --}}
              <div class="col-2"><label for="description">Book Description: </label></div>
              <div class="input col-10"><textarea rows="8" cols="60" name="description">{{book.description}}</textarea>
              </div>
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
          </form>

          <form method="POST" action="/table_books/delete/{{_id}}"></form>
          <button type="submit" class="btn btn-danger">Delete</button>
          </form>
          <button class="btn btn-warning"><a href="/table_books">Cancel</a></button>
        </div>
      </div>
